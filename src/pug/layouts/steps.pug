				+e.step2-bubble2.js-svg(data-svg-src="app/objects/step2__bubble2.svg")
				+e.step2-bubble3.js-svg(data-svg-src="app/objects/step2__bubble3.svg")
				+e.step2-bubble4.js-svg(data-svg-src="app/objects/step2__bubble4.svg")
			+e.item.steps__item-3.flex._vertical
				+e.col5
					+e.number ШАГ 3
